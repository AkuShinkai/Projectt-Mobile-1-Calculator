<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7F3EF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Enter Decimal Number:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDecimal"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Result Binary Number: "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBinary"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="4">

            <Button
                android:id="@+id/btnNumber7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="7"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="8"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="9"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="4"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="5"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="6"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="2"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="3"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FF808080"
                android:text="C"
                android:textSize="25sp"
                android:textStyle="bold" />

        </GridLayout>

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFBDBDBD"
            android:text="Convert"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>
