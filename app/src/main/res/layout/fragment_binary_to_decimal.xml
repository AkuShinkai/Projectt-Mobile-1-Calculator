<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7F3EF"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtBinary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Enter Binary Number:"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBinary"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="8dp"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Result Decimal Number: "
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDecimal"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:layout_marginTop="16dp"
            android:columnCount="3"
            android:rowCount="5">

            <Button
                android:id="@+id/btnNumber1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="1"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNumber0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="#FFE0E0E0"
                android:text="Clear"
                android:textSize="25sp"
                android:textStyle="bold" />

        </GridLayout>

        <Button
            android:id="@+id/btnConvert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFBDBDBD"
            android:text="Convert"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</layout>
